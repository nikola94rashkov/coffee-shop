{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": "./src", // Set the base URL to your src folder
		"paths": {
			"@components/*": ["components/*"], // Define the alias for components
			"@interfaces": ["interfaces"], // Define the alias for types
			"@pages": ["pages"], // Define the alias for pages
			"@router": ["router"], // Define the alias for router
		},
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"],
}
